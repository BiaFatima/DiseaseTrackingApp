<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom CardView style -->
    <style name="Widget.DiseaseTrackerApp.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="strokeColor">@color/primary_dark</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Custom Button style -->
    <style name="Widget.DiseaseTrackerApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>